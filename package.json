    "lint-staged": "^10.2.11",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
