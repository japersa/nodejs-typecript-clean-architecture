  "description": "Clean Architecture Node.js+Typescript",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/infrastructure/server.js",
    "dev": "NODE_ENV=development nodemon --config ./nodemon.json",
